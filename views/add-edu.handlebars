<div class="add-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <h1>Add your education.</h1>
                    <hr>
                    <div class="row justify-content-center">
                        <div class="col-md-9" id="add-new-div">
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="newEdu">Institution Name</label>
                                        <input type="text" class="form-control" id="inputNewEdu" placeholder="Institution Name">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="newDegree">Degree/Certificate</label>
                                        <input type="text" class="form-control" id="inputDegree" placeholder="Degree or Certificate Awarded">
                                    </div>
                                </div>
                                <div class="form-row justify-content-center">
                                    <div class="form-group col-md-6">
                                        <label for="inputEduLocation">Location</label>
                                        <input type="text" class="form-control" id="inputEduLocation" placeholder="City, State">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputEduStartDate">Start Date</label>
                                        <input type="text" class="form-control" id="inputEduStartDate" placeholder="03/01/18">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputEduEndDate">End Date</label>
                                        <input type="text" class="form-control" id="inputEduEndDate" placeholder="08/01/18">
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Add</button>
                            </form>


                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalCenterTitle">Success!</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            New Education Added!
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Continue
                                                Adding
                                            </button>
                                            <a href="/dashboard"><button type="button" class="btn btn-primary">See your entire
                                                    list
                                                </button></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>