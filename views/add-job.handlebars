<div class="add-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <h1>Add a new job or project.</h1>
                    <hr>
                    <div class="row justify-content-center">
                        <div class="col-md-9" id="add-new-div">
                            <form class="add-job">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="new-type-select">Select Type</label>
                                        <select id="new-type-select" class="form-control">
                                            <option selected>Choose...</option>
                                            <option>Job</option>
                                            <option>Project</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="job-name-input">Job/Project Name</label>
                                        <input type="text" class="form-control" id="job-name-input" placeholder="Job/Project Name">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="role-input">Title/Role</label>
                                        <input type="text" class="form-control" id="role-input" placeholder="Position Held">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="start-input">Start Date</label>
                                        <input type="text" class="form-control" id="start-input" placeholder="03/01/18">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="end-input">End Date</label>
                                        <input type="text" class="form-control" id="end-input" placeholder="08/01/18">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="description-input">Description</label>
                                        <input type="text" class="form-control" id="description-input" placeholder="Describe what you accomplished">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="skills-input">Skills</label>
                                        <input type="text" class="form-control" id="skills-input" placeholder="What skills did you use or gain?">
                                    </div>
                                </div>
                                <div class="form-row">
                                  <div class="col-md-2">
                                    <button type="submit" class="btn btn-md add-new-btn btn-block" data-toggle="modal" data-target="#exampleModalCenter">Add</button>
                                  </div>
                                </div>
                            </form>


              <!-- Modal -->
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalCenterTitle">Success!</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      New Job/Project Added!
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-sm continue-add-btn" data-dismiss="modal">Continue
                        Adding</button>
                        <a href="/searchjob"><button type="button" class="btn btn-sm see-all-btn">See your entire
                          list</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


